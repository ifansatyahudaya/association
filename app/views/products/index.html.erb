<h1><%= params[:tag_id].present? ? "Products with tag #{@tag.name}" : "List products by #{@category.name}" %></h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
  </tr>
  <% @products.each do |product| %>  
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
    </tr>
  <% end %>
</table>
<%= link_to "back", params[:tag_id].present? ? root_path : categories_path %>
