<h2>Welcome in landing page</h2>

<% if flash[:notice].present? %>
  <div style="background: green; padding: 10px;">
    <b>Notification</b>
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert].present? %>
  <div style="background: red; padding: 10px;">
    <b>Notification</b>
    <%= flash[:alert] %>
  </div>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3">Action</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= link_to "edit", edit_user_path(user) %></td>
      <td><%= link_to "destroy", user, method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add User", new_user_path %>
<%= link_to "Category", categories_path %>
