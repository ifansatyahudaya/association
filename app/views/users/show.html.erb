<h1>User details</h1>

<p>
  <b>Name: </b>
  <%= @user.name %>
</p>
<p>
  <b>Email: </b>
  <%= @user.email %>
</p>

<h1>Products User</h1>
<table border="1">
  <tr>
    <th>Product Name</th>
    <th>Price</th>
    <th>Description</th>
  </tr>
  <% @user.products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Back", root_path %>